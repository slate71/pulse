# Pulse Development Environment Configuration
# Copy to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@db:5432/pulse

# PostgreSQL container settings
POSTGRES_DB=pulse
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Database connection pool settings (optional)
# DB_MIN_CONNECTIONS=1
# DB_MAX_CONNECTIONS=20
# DB_COMMAND_TIMEOUT=60

# =============================================================================
# EXTERNAL API KEYS (Optional - system works without these)
# =============================================================================

# GitHub API (for GitHub ingestion)
GITHUB_TOKEN=ghp_your_github_token_here

# Linear API (for Linear ingestion)
LINEAR_API_KEY=lin_api_your_linear_key_here
LINEAR_TEAM_ID=your_linear_team_id_here

# OpenAI API (for enhanced AI reasoning, falls back to local logic without this)
OPENAI_API_KEY=sk-your_openai_api_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development

# API server settings (used when running outside containers)
API_HOST=localhost
API_PORT=8000
