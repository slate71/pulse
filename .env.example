# Pulse Environment Configuration - Staff Engineer Setup
# Copy to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION  
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@db:5432/pulse

# PostgreSQL container configuration
POSTGRES_DB=pulse
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Production database credentials (for docker-compose.prod.yml)
DB_USER=pulse_user
DB_PASSWORD=your_secure_database_password_here

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# GitHub API Configuration (required for GitHub ingestion)
GITHUB_TOKEN=ghp_your_github_token_here
GH_TOKEN=ghp_your_github_token_here

# Linear API Configuration (required for Linear ingestion)
LINEAR_API_KEY=lin_api_your_linear_key_here  
LINEAR_TEAM_ID=your_linear_team_id_here

# OpenAI API Configuration (required for AI priority reasoning)
OPENAI_API_KEY=sk-your_openai_api_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Web Configuration  
WEB_HOST=0.0.0.0
WEB_PORT=3000
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# =============================================================================
# SECURITY (Production)
# =============================================================================

# Secret key for JWT tokens and encryption (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here_minimum_32_characters_long

# Redis password (for production caching)
REDIS_PASSWORD=your_redis_password_here

# Grafana admin password (for monitoring)
GRAFANA_PASSWORD=your_grafana_admin_password_here

# =============================================================================
# PRODUCTION DEPLOYMENT
# =============================================================================

# Domain for production deployment
DOMAIN=your-domain.com

# SSL Certificate paths
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================

# Set to true to enable development features
DEVELOPMENT_MODE=true

# Database connection for local development (outside containers)
# DATABASE_URL=postgresql://lukasandersen@localhost:5432/pulse_local
