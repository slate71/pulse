# Pulse Development Environment Configuration
# Copy to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@db:5432/pulse

# PostgreSQL container settings
POSTGRES_DB=pulse
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Database connection pool settings (optional)
DB_MIN_CONNECTIONS=1
DB_MAX_CONNECTIONS=20
DB_COMMAND_TIMEOUT=60
DB_QUERY_TIMEOUT=30

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=false

# App metadata
APP_TITLE=Pulse API
APP_DESCRIPTION=AI-powered engineering radar API
APP_VERSION=1.0.0

# Server settings
API_HOST=0.0.0.0
API_PORT=8000

# Request handling
REQUEST_TIMEOUT=300
MAX_REQUEST_SIZE=16777216

# Logging configuration
LOG_LEVEL=INFO
STRUCTURED_LOGGING=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS settings (comma-separated values)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# Security headers
HSTS_MAX_AGE=31536000
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# API key authentication (optional)
API_KEY_HEADER=X-API-Key
# VALID_API_KEYS=your-api-key-1,your-api-key-2

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

# GitHub API (for GitHub ingestion)
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_TIMEOUT=30

# Linear API (for Linear ingestion)
LINEAR_API_KEY=lin_api_your_linear_key_here
LINEAR_TEAM_ID=your_linear_team_id_here
LINEAR_TIMEOUT=30

# OpenAI API (for enhanced AI reasoning, falls back to local logic without this)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_TIMEOUT=60
OPENAI_MODEL=gpt-4

# Redis Cache (optional - enables distributed caching)
REDIS_URL=redis://localhost:6379
REDIS_TIMEOUT=5

# =============================================================================
# PRODUCTION OVERRIDES (uncomment for production deployment)
# =============================================================================

# ENVIRONMENT=production
# DEBUG=false
# STRUCTURED_LOGGING=true
# LOG_LEVEL=WARNING
# CORS_ORIGINS=https://yourdomain.com
# HSTS_MAX_AGE=63072000
