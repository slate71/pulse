# Database Configuration for Pulse
# Copy this to .env and update with your actual database credentials

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://pulse_user:pulse_password@localhost:5432/pulse_db

# Alternative format for different environments:
# Development:
# DATABASE_URL=postgresql://postgres:password@localhost:5432/pulse_dev

# Production (example):
# DATABASE_URL=postgresql://user:password@prod-db.example.com:5432/pulse_prod

# Docker Compose (example):
# DATABASE_URL=postgresql://postgres:postgres@db:5432/pulse

# Connection pool settings (optional - will use sensible defaults)
DB_MIN_CONNECTIONS=1
DB_MAX_CONNECTIONS=20
DB_COMMAND_TIMEOUT=60